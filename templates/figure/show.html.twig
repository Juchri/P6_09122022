{% extends 'base.html.twig' %}

{% block title %}Snow Tricks{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="container column">
        <div class="mb-4 col-md-9">
            <img src="https://user.oc-static.com/upload/2016/11/17/14793747168201_snowboard_neige_figure_saut_shutterstock_3516624621.jpg" class="card-img-top" alt="Accroche HTML" />
            <div class="card-body">
                <h1 class="card-title h4"> {{ figure.name }} </h1>
                <h3 class="card-subtitle h6 text-secondary py-1"> Difficult√© {{ figure.difficulty }} </h3>
                <p class="card-text h6 text-justify py-2"> {{ figure.description }} </p>
                <a href="{{ path('app_figure_edit', {'id': figure.id}) }}"  class="btn btn-primary">Editer</a>
                <a href="{{ path('app_figure_delete', {'id': figure.id}) }}"  class="btn btn-danger">Supprimer</a><br/>
                <a href="{{ path('app_message', {'id': figure.id}) }}"  class="btn btn-success">Chat</a>
            </div>
        </div>
         <a href="{{ path('app_main')}}"  class="btn btn-light ml-auto">Retour aux figures</a>
    </div>

    {% for m in figure.messages %}
        <div class="card mx-auto mb-4 p-0 col-md-5">
            <a href="{{ path('app_figure_show', {'id': m.id}) }}" >
                <div class="card-body">
                    <h2 class="card-title h4"> {{ m.content }} </h2>
                </div>
            </a>
        </div>
    {% endfor %}
</div>


{% endblock %}
